<?xml version="1.0" encoding="utf-8"?>
<!-- Shimmer placeholder matching YouTube-style flat card layout -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <!-- Thumbnail placeholder -->
    <View
        android:id="@+id/shimmer_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorSurfaceVariant"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Channel avatar placeholder (circular) -->
    <View
        android:id="@+id/shimmer_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shimmer_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_thumbnail" />

    <!-- Title placeholder -->
    <View
        android:id="@+id/shimmer_title"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="48dp"
        android:background="?attr/colorSurfaceVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmer_avatar"
        app:layout_constraintTop_toBottomOf="@id/shimmer_thumbnail" />

    <!-- Subtitle placeholder -->
    <View
        android:id="@+id/shimmer_subtitle"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="96dp"
        android:background="?attr/colorSurfaceVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmer_avatar"
        app:layout_constraintTop_toBottomOf="@id/shimmer_title" />

</androidx.constraintlayout.widget.ConstraintLayout>