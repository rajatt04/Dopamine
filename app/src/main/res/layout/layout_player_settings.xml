<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player Settings"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="20dp" />

    <!-- Playback Speed Section -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Playback Speed"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/speedChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:chipSpacingHorizontal="8dp"
        android:layout_marginBottom="20dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/speed025"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.25x"
            android:tag="0.25" />

        <com.google.android.material.chip.Chip
            android:id="@+id/speed05"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.5x"
            android:tag="0.5" />

        <com.google.android.material.chip.Chip
            android:id="@+id/speed075"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.75x"
            android:tag="0.75" />

        <com.google.android.material.chip.Chip
            android:id="@+id/speed10"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:tag="1.0" />

        <com.google.android.material.chip.Chip
            android:id="@+id/speed125"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.25x"
            android:tag="1.25" />

        <com.google.android.material.chip.Chip
            android:id="@+id/speed15"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.5x"
            android:tag="1.5" />

        <com.google.android.material.chip.Chip
            android:id="@+id/speed175"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.75x"
            android:tag="1.75" />

        <com.google.android.material.chip.Chip
            android:id="@+id/speed20"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2x"
            android:tag="2.0" />
    </com.google.android.material.chip.ChipGroup>

    <!-- Quality Section -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/qualityHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quality"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/qualityChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:chipSpacingHorizontal="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Loading quality indicator -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/qualityLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:indeterminate="true"
        android:visibility="gone" />

</LinearLayout>
